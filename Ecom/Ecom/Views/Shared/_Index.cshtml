<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>RECKLESS</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwJdzZNjc1e5K0GqVC2iq5zj5ZTI_7lCE&callback=initMap" async defer></script>
</head>
<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container px-5">
                <a class="navbar-brand" href="index.html">HOSPICE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        @{ try
                            {
                                if (Session["user"] != null)
                                {
                                    @Html.ActionLink("Services", "Services", "Resources", Session["user"], new { @class = "nav-link" })
                                    @Html.ActionLink("Stores", "Stores", "Resources", Session["user"], new { @class = "nav-link" })
                                    @Html.ActionLink("Logout", "Logout", "Account", null, new {@class="nav-link"})
                                }
                                else
                                {
                                    @Html.ActionLink("Stores", "Stores", "Resources", null, new { @class = "nav-link" })
                                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                                }
                            }
                            catch (Exception ex)
                            {

                                throw;
                            } }
                    </ul>
                </div>
            </div>
        </nav>
        <div>
            @RenderBody();
        </div>
    </main>

    <footer class="bg-dark py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto"><div class="small m-0 text-white">Copyright &copy; Your Website 2023</div></div>
                <div class="col-auto">
                    <a class="link-light small" href="#!">Privacy</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Terms</a>
                    <span class="text-white mx-1">&middot;</span>
                    <a class="link-light small" href="#!">Contact</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/scripts.js"></script>

</body>
</html>
